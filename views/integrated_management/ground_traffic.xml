<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="funenc_xa_station_ground_traffic_list">
			<field name="name">funenc_xa_station_ground_traffic</field>
			<field name="model">funenc_xa_station.ground_traffic</field>
			<field name="arch" type="xml">
				<tree >
					<field name="ground_environment_ids" string="地面环境"/>
					<field name="bus_lines" string="交通线路表"/>
				</tree>
			</field>
		</record>

        <record model="ir.ui.view" id="funenc_xa_station_ground_traffic_form">
			<field name="name">funenc_xa_station_ground_traffic_form</field>
			<field name="model">funenc_xa_station.ground_traffic</field>
			<field name="arch" type="xml">
				<form >
					<div class="form-group">

						<div class="text-center ">
							<h1> 地面环境 </h1>
						</div>
						<field name="line_id" invisible="1"/>
						<field name="site_id" invisible="1"/>

						<div class="text-center">
							<field name="ground_environment_ids">
								<tree editable="top" class="noOpen">
									<field name="entrance_exit" string="出入口"/>
									<field name="one_grade_information" string="一级信息"/>
									<field name="two_grade_information" string="二级信息"/>
									<field name="three_grade_information" string="三级信息"/>
								</tree>
                                <form>
                                    <group>
                                        <field name="entrance_exit" string="出入口"/>
                                        <field name="one_grade_information" string="一级信息"/>
                                        <field name="two_grade_information" string="二级信息"/>
                                        <field name="three_grade_information" string="三级信息"/>
                                    </group>
								</form>
							</field>
						</div>

                        <div class="text-center ">
							<h1> 交通线路表 </h1>
						</div>
						<div class="text-center ">
							<field name="bus_lines">
								<tree editable="top" class="noOpen">
									<field name="entrance_exit" string="出入口"/>
									<field name="bus_station" string="公交站点"/>
									<field name="distance" string="距离"/>
									<field name="go_to" string="运行方向"/>
                                    <field name="bus_line" string="公交线路"/>
								</tree>
                                <form>
                                    <group>
                                        <field name="entrance_exit" string="出入口"/>
                                        <field name="bus_station" string="公交站点"/>
                                        <field name="distance" string="距离"/>
                                        <field name="go_to" string="运行方向"/>
                                        <field name="bus_line" string="公交线路"/>
                                    </group>
								</form>
							</field>
						</div>

					</div>


				</form>
			</field>
		</record>

    </data>
</odoo>