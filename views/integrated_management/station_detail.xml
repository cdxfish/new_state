		<record model="ir.ui.view" id="funenc_xa_station_station_detail_form">
			<field name="name">funenc_xa_station_station_detailform</field>
			<field name="model">funenc_xa_station.station_detail</field>
			<field name="arch" type="xml">
				<form >
					<div class="form-group">
						<div class="text-center ">
							<h1> 车站性质 </h1>
						</div>
						<field name="line_id" invisible="1"/>
						<field name="site_id" invisible="1"/>
						<div class="text-center ">
							<field name="station_nature" />
						</div>

						<div class="text-center ">
							<h1> 车站位置 </h1>
						</div>
						<div class="text-center ">
							<field name="station_position" />
						</div>

						<div class="text-center ">
							<h1> 出口信息 </h1>
						</div>
						<div class="text-center ">
							<field name="station_exit_information">
								<tree>
									<field name="exit_no" string="出口编号"/>
									<field name="exit_width" string="宽度"/>
									<field name="position" string="位置"/>
									<field name="remarks" string="备注说明"/>
								</tree>
							</field>
						</div>

						<div class="text-center ">
							<h1> 地面信息 </h1>
						</div>
						<div class="text-center ">
							<field name="station_map_images">
								<tree>
									<field name="name" string="名字"/>
									<field name="image" string="图片信息" widget="image" options="{&quot;size&quot;: [200, 200]}"/>
								</tree>
								<form>
									<field name="image" string="图片信息" widget="image"/>
								</form>
							</field>
						</div>
					</div>


				</form>
			</field>
		</record>
	
