		<record model="ir.ui.view" id="funenc_xa_station_station_detail_list">
			<field name="name">funenc_xa_station_station_detail_list</field>
			<field name="model">funenc_xa_station.station_detail</field>
			<field name="arch" type="xml">
				<tree >
					<field name="station_nature" string="车站性质"/>
					<field name="station_position" string="车站位置"/>
					<field name="station_exit_information" string="出口信息"/>
