<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<record model="ir.ui.view" id="fuenc_station_borrow_record_list">
			<field name="name">fuenc_station_borrow_record_list</field>
			<field name="model">fuenc.station.borrow.record</field>
			<field name="arch" type="xml">
				<tree limit="15">
					<field name="key_no"/>
					<field name="line"/>
					<field name="type"/>
					<field name="station"/>
					<field name="name"/>
					<field name="position"/>
					<field name="state"/>
					<field name="borrow_time"/>
					<field name="borrow_operate_member"/>
					<field name="borrow_member"/>
					<field name="return_time"/>
					<field name="return_operate_member"/>
					<field name="return_member"/>
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="fuenc_station_borrow_record_form">
			<field name="name">fuenc_station_borrow_record_form</field>
			<field name="model">fuenc.station.borrow.record</field>
			<field name="arch" type="xml">
				<form>
					<div class="container-fluid">
						<group>
							<field name="key_no" string="钥匙编号"/>
							<field name="return_member" string="归还人" />
							<field name="line" string="选择线路"/>
							<field name="type" string="钥匙类型"/>
							<field name="station" string="归属站点"/>
							<field name="name" string="钥匙名称"/>
							<field name="position" string="对应位置"/>
							<field name="borrow_member" string="借用人"/>
							<field name="borrow_time" string="借用时间"/>
						</group>
					</div>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="fuenc_station.borrow_record_form_1">
			<field name="name">fuenc_station_borrow_record_form</field>
			<field name="model">fuenc.station.borrow.record</field>
			<field name="arch" type="xml">
				<form>
					<div class="container-fluid">
						<group>
							<field name="line" string="选择线路"/>
							<field name="station" string="归属站点"/>
							<field name="borrow_member" string="借用人"/>
							<field name="key_no" string="钥匙编号"/>
							<field name="type" string="钥匙类型" readonly="1"/>
							<field name="name" string="钥匙名称" readonly="1"/>
							<field name="position" string="对应位置" readonly="1"/>
						</group>
					</div>
				</form>
			</field>
		</record>
	
	</data>
</odoo>