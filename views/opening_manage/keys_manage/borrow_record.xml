<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<record model="ir.ui.view" id="funenc_xa_station_borrow_record_list">
			<field name="name">funenc_xa_station_borrow_record_list</field>
			<field name="model">funenc.xa.station.borrow.record</field>
			<field name="arch" type="xml">
				<tree limit="15">
					<field name="key_no"/>
					<field name="line_id"/>
					<field name="type"/>
					<field name="site_id"/>
					<field name="name"/>
					<field name="position"/>
					<field name="state"/>
					<field name="borrow_time"/>
					<field name="borrow_operate_member"/>
					<field name="borrow_member"/>
					<field name="return_time"/>
					<field name="return_operate_member"/>
					<field name="return_member"/>
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="funenc_xa_station_borrow_record_form">
			<field name="name">funenc_xa_station_borrow_record_form</field>
			<field name="model">funenc.xa.station.borrow.record</field>
			<field name="arch" type="xml">
				<form>
					<div class="container-fluid">
						<group>
							<field name="line_id" string="线路" domain="[('department_hierarchy','=',2)]" options="{'no_create':True,'no_open':True}" groups="funenc_xa_station.system_fuenc_tester"/>
                            <field name="site_id" string="站点" domain="[('department_hierarchy','=',3)]" options="{'no_create':True,'no_open':True}" groups="funenc_xa_station.system_fuenc_tester" context="{'site_id': site_id}"/>
							<field name="key_no" string="钥匙编号"  options="{'no_open': True, 'no_create': True}" domain="[('is_borrow','=',1)]"/>
							<field name="return_member" string="归还人" attrs="{'required':True}" domain="[('departments','=',site_id)]"/>
							<field name="type" string="钥匙类型"/>
							<field name="name" string="钥匙名称"/>
							<field name="position" string="对应位置"/>
							<field name="borrow_member" string="借用人"/>
							<field name="borrow_time" string="借用时间"/>

						</group>
						<footer >
							<button type="object" name="submit">提交</button>
						</footer>
					</div>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="funenc_xa_station.borrow_record_form_1">
			<field name="name">funenc_xa_station_borrow_record_form</field>
			<field name="model">funenc.xa.station.borrow.record</field>
			<field name="arch" type="xml">
				<form>
					<div class="container-fluid">
						<group>
							<field name="line_id" string="线路" domain="[('department_hierarchy','=',2)]" options="{'no_create':True,'no_open':True}" groups="funenc_xa_station.system_fuenc_tester"/>
                            <field name="site_id" string="站点" domain="[('department_hierarchy','=',3)]" options="{'no_create':True,'no_open':True}" groups="funenc_xa_station.system_fuenc_tester" context="{'site_id': site_id}"/>
							<field name="key_no" string="钥匙编号" domain="[('is_borrow','=',2),('site_id','=',site_id)]"/>
							<field name="borrow_member" string="借用人" attrs="{'required':True}" domain="[('departments','in', site_id)]" options="{'no_create':True,'no_open':True}"/>
							<field name="type" string="钥匙类型" readonly="1"/>
							<field name="name" string="钥匙名称" readonly="1"/>
							<field name="position" string="对应位置" readonly="1"/>
						</group>
					</div>
				</form>
			</field>
		</record>
	
	</data>
</odoo>