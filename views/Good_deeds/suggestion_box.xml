                        <div class="col-md-3">
                              <div class="col-md-6">
                                 <label for="write_person" string="填报人"/>
                              </div>
                             <div class="col-md-6">
                                 <field name="write_person"/>
                              </div>
                         </div>
                        <div class="col-md-3">
                              <div class="col-md-6">
