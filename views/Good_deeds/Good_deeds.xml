<odoo>
    <data>

        <record model="ir.actions.server" id="good_deeds_act_new_increase">
            <field name="name">新增</field>
            <field name="state">code</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_fuenc_station_good_deeds"/>
            <field name="condition">True</field>
            <field name="binding_model_id" ref="model_fuenc_station_good_deeds"/>
            <field name="binding_type">action_button</field>
            <field name="binding_action">好人好事</field>
            <field name="binding_group">funenc_xa_station.passenger_server_good_deeds_increase</field>
            <field name="code">
                action = model.new_increase_record()
            </field>
        </record>

        <record model="ir.actions.server" id="good_deeds_act">
            <field name="name">好人好事</field>
            <field name="type">ir.actions.server</field>
            <field name="res_model">fuenc_station.good_deeds</field>
            <field name="model_id" ref="model_fuenc_station_good_deeds"/>
            <field name="condition">True</field>
            <field name="state">code</field>
            <field name="code">
                action = model.get_day_plan_publish_action()
            </field>
        </record>


    ﻿   <record model="ir.actions.act_url" id="good_deeds_url">
            <field name="name">导出</field>
            <field name="type">ir.actions.act_url</field>
            <field name="binding_model_id" ref="model_fuenc_station_good_deeds"/>
            <field name="binding_xml_id">good_deeds_tree</field>
            <field name="binding_type">action_button</field>
            <field name="binding_group">funenc_xa_station.passenger_server_good_deeds_export</field>
            <field name="url">/funenc_xa_station/good_deeds</field>
            <field name="target">new</field>
        </record>

        <record id="good_deeds_tree" model='ir.ui.view'>
            <field name="name">好人好事</field>
            <field name="model">fuenc_station.good_deeds</field>
            <field name="arch" type="xml">
                <tree edit="0" create="0" class="noOpen">
                    <field name="id" string="序号"></field>
                    <field name="line_id"></field>
                    <field name="site_id"></field>
                    <field name="type"></field>
                    <field name="open_time"></field>
                    <field name="write_person"></field>
                    <field name="write_time"></field>
                    <field name="audit_state"></field>
                    <widget string="操作" name="treebtns" template="good_deeds_button" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="good_deeds_from">
            <field name="name">好人好事</field>
            <field name="model">fuenc_station.good_deeds</field>
            <field name="arch" type="xml">
                <form>
                    <div class="container-fluid">
                        <div class="row">
                           <div class="col-md-6">
                              <div class="col-md-4">
                                 <label for="line_id" string="线路"/>
                              </div>
                             <div class="col-md-8">
                                 <field name="line_id" domain="[('department_hierarchy','=',2)]" options="{'no_create':True,'no_open':True}"/>
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="col-md-4">
                                 <label for="site_id" string="站点"/>
                              </div>
                                 <div class="col-md-8">
                                     <field name="site_id" domain="[('department_hierarchy','=',3)]" options="{'no_create':True,'no_open':True}"/>
                              </div>
                           </div>
                        </div>

                            <div class="row">
                               <div class="col-md-6">
                                  <div class="col-md-4">
                                     <label for="open_time" string="发生时间"/>
                                  </div>
                                 <div class="col-md-8">
                                     <field name="open_time"/>
                                  </div>
                               </div>
                               <div class="col-md-6">
                                  <div class="col-md-4">
                                     <label for="open_site" string="发生地点"/>
                                  </div>
                                     <div class="col-md-8">
                                         <field name="open_site"/>
                                  </div>
                               </div>
                            </div>

                            <div class="row">
                               <div class="col-md-6">
                                  <div class="col-md-4">
                                     <label for="type" string="事件类型"/>
                                  </div>
                                 <div class="col-md-8">
                                     <field name="type"/>
                                  </div>
                               </div>
                               <div class="col-md-6">
                                  <div class="col-md-4">
                                     <label for="related_person" string="相关人员"/>
                                  </div>
                                     <div class="col-md-8">
                                         <field name="related_person" widget="many2many_tags">
                                             <tree>
                                                 <field name="name" ></field>
                                             </tree>
                                         </field>
                                  </div>
                               </div>
                            </div>

                           <div class="row">
                               <div class="col-md-12">
                                  <div class="col-md-2">
                                     <label for="event_state" string="事件详情"/>
                                  </div>
                                 <div class="col-md-10">
                                     <field name="event_state"/>
                                  </div>
                               </div>
                            </div>

                           <div class="row">
                               <div class="col-md-12">
                                  <div class="col-md-2">
                                     <label for="load_file_test" string="图片附件"/>
                                  </div>
                                 <div class="col-md-10">
                                     <field name="load_file_test" widget="one2many_image_read_widget">
                                        <tree>
                                            <field name="datas_fname"/>
                                        </tree>
                                    </field>
                                  </div>
                               </div>
                            </div>

                           <div class="row">
                               <div class="col-md-12">
                                  <div class="col-md-1">
                                     <label for="mp_play_many" string="视屏附件："/>
                                  </div>
                                 <div class="col-md-3">
                                    <field name="mp_play_many">
                                        <tree>
                                            <field name="video" filename="file_name" max_upload_kb="10240000"></field>
                                            <field name="file_name" invisible="1"/>
                                            <!--<widget  name="treebtns" template="guests_hurt_button" string="操作"/>-->
                                        </tree>
                                        <form>
                                            <sheet>
                                                <group>
                                                     <field name="video" filename="file_name" max_upload_kb="10240000"></field>
                                                    <field name="file_name" invisible="1"/>
                                                </group>
                                            </sheet>
                                        </form>
                                    </field>
                                  </div>
                               </div>
                            </div>

                    </div>
                </form>
            </field>
        </record>

        <record id="good_deeds_state" model="ir.ui.view">
            <field name="name">好人好事详情</field>
            <field name="model">fuenc_station.good_deeds</field>
            <field name="arch" type="xml">
                <form>
                        <h1>基本信息</h1>
                        <div class="row">
                           <div class="col-md-6">
                              <div class="col-md-4">
                                 <label for="line_id" string="线路"/>
                              </div>
                             <div class="col-md-8">
                                 <field name="line_id"/>
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="col-md-4">
                                 <label for="site_id" string="站点"/>
                              </div>
                                 <div class="col-md-8">
                                     <field name="site_id"/>
                              </div>
                           </div>
                        </div>

                       <div class="row">
                           <div class="col-md-3">
                              <div class="col-md-6">
                                 <label for="open_time" string="发生时间"/>
                              </div>
                             <div class="col-md-6">
                                 <field name="open_time"/>
                              </div>
                           </div>

                             <div class="col-md-3">
                                  <div class="col-md-6">
                                     <label for="write_time" string="填报时间"/>
                                  </div>
                                     <div class="col-md-6">
                                         <field name="write_time"/>
                                  </div>
                               </div>

                           <div class="col-md-3">
                              <div class="col-md-6">
                                 <label for="write_time" string="填报人"/>
                              </div>
                                 <div class="col-md-6">
                                     <field name="write_time"/>
                              </div>
                           </div>

                              <div class="col-md-3">
                                  <div class="col-md-6">
                                     <label for="audit_state" string="审核状态"/>
                                  </div>
                                     <div class="col-md-6">
                                         <field name="audit_state"/>
                                  </div>
                               </div>

                           </div>

                           <div class="row">
                               <div class="col-md-6">
                                  <div class="col-md-4">
                                     <label for="open_time" string="事件类型"/>
                                  </div>
                                 <div class="col-md-8">
                                     <field name="open_time"/>
                                  </div>
                               </div>
                               <div class="col-md-6">
                                  <div class="col-md-4">
                                     <label for="open_site" string="发生地点"/>
                                  </div>
                                     <div class="col-md-8">
                                         <field name="open_site"/>
                                  </div>
                               </div>
                            </div>


                         <div class="row">
                               <div class="col-md-12">
                                  <div class="col-md-2">
                                     <label for="related_person" string="相关人员"/>
                                  </div>
                                 <div class="col-md-10">
                                     <field name="related_person" widget="many2many_tags">
                                          <tree>
                                             <field name="name"></field>
                                         </tree>
                                     </field>
                                  </div>
                           </div>
                         </div>

                          <div class="row">
                               <div class="col-md-12">
                                  <div class="col-md-2">
                                     <label for="event_state" string="事件详情"/>
                                  </div>
                                 <div class="col-md-10">
                                     <field name="event_state"/>
                                  </div>
                           </div>

                            <div class="row">
                               <div class="col-md-12">
                                  <div class="col-md-2">
                                     <label for="audit_flow" string="审核流程"/>
                                  </div>
                                 <div class="col-md-10">
                                     <field name="audit_flow"/>
                                </div>
                             </div>
                         </div>

                          <h1>附件类容</h1>

                          <div class="row">
                               <div class="col-md-12">
                                  <div class="col-md-2">
                                     <label for="load_file_test" string="照片："/>
                                  </div>
                                 <div class="col-md-10">
                                     <field name="load_file_test" widget="one2many_image_read_widget">
                                        <tree>
                                            <field name="datas_fname"/>
                                        </tree>
                                     </field>
                                </div>
                             </div>
                         </div>

                         <div class="row">
                           <div class="col-md-12">
                              <div class="col-md-1">
                                 <label for="mp_play_many" string="视屏附件："/>
                              </div>
                             <div class="col-md-3">
                                <field name="mp_play_many">
                                    <tree>
                                        <field name="video" filename="file_name" max_upload_kb="10240000"></field>
                                        <field name="file_name" invisible="1"/>
                                        <!--<widget  name="treebtns" template="guests_hurt_button" string="操作"/>-->
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                 <field name="video" filename="file_name" max_upload_kb="10240000"></field>
                                                <field name="file_name" invisible="1"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                              </div>
                           </div>
                        </div>

                    </div>
                </form>
            </field>
        </record>


