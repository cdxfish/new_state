<odoo>
    <data>
        <record id="guests_hurt_tree" model="ir.ui.view">
            <field name="name">客伤</field>
            <field name="model">fuenc_xa_station.guests_hurt</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id" string="序号"></field>
                    <field name="line_id"></field>
                    <field name="site_id"></field>
                    <field name="open_time"></field>
                    <field name="write_person"></field>
                    <field name="guests_name"></field>
                    <field name="write_time"></field>
                    <field name="claim"></field>
                    <field name="claim_money"></field>
                    <field name="claim_state"></field>
                    <field name="audit_state"></field>
                    <widget string="操作" name="treebtns" template="guests_hurt_button" />
                </tree>
            </field>
        </record>

        <record id="guests_hurt_form" model="ir.ui.view">
            <field name="name">客伤</field>
            <field name="model">fuenc_xa_station.guests_hurt</field>
            <field name="arch" type="xml">
                <form>
                   <div class="col-md-8">
                       <div class="col-md-8">
                          <div class="field-margin">
                             <label for="user_name" string="姓名"/>
                             <field name="user_name"/>
                          </div>
                       </div>
                       <div class="col-md-4">
                          <div class="field-margin">
                             <label for="user_name" string="姓名"/>
                             <field name="user_name"/>
                          </div>
                       </div>
                   </div>
                </form>
            </field>
        </record>


		<record id="guests_hurt_act" model="ir.actions.act_window">
			<field name="name">客伤</field>
			<field name="res_model">fuenc_xa_station.guests_hurt</field>
			<field name="view_mode">tree,form</field>
		</record>

        <!--<menuitem id="guests_hurt_mune" name="客伤" action="guests_hurt_act"></menuitem>-->
    </data>
</odoo>