<odoo>
    <data>

    <record model="ir.ui.view" id="train_train_line_tree">
      <field name="name">线路设置</field>
      <field name="model">train_line.train_line</field>
      <field name="arch" type="xml">
        <tree>
                <field name="name"/>
                <field name="remark"/>
                <field name="c_time" />
                <widget string="操作" name="treebtns" template="main_line_edit" />
        </tree>
      </field>
    </record>

     <record model="ir.ui.view" id="train_train_line_form">
      <field name="name">线路设置</field>
      <field name="model">train_line.train_line</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
            <group name="group_top" string="线别设置">
                <field name="name"/>
                 <field name="remark"/>
                 <field name="c_time" />
                <field name="station_ids" />
             </group>
          </sheet>
        </form>
      </field>
    </record>









    </data>
</odoo>