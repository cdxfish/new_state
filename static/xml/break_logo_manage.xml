<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
	<!--修改与删除按钮和删除-->
    <t t-name="break_log_button">
        <div class="layui-btn-group">
            <button class="layui-btn layui-btn-sm" type="object" hidden="hidden" name="onchange_change"
            t-if="widget.record.data.state == 'zero'" group='funenc_xa_station.break_warehouse_management_repair'
            >修复</button>
            <button class="layui-btn layui-btn-sm layui-btn-danger" type="object" hidden="hidden" name="break_record_selete"
                    group='funenc_xa_station.break_warehouse_management_delete'
                    confirm="您确定要删除该条记录吗？" >删除</button>
            <button type="object" hidden="hidden" name="onchange_record" class="layui-btn layui-btn-sm" group='funenc_xa_station.break_warehouse_management_modifty'
            >修改</button>
        </div>
    </t>


   <t t-name="break_submit_button">
        <div class="layui-btn-group">
            <button type="object"  name="browse_image_button_act" class="layui-btn layui-btn-sm"
            >查看图片</button>
        </div>
    </t>

   <t t-name="break_submit_operation">
        <div class="layui-btn-group">
            <button type="object" hidden="hidden" name="deal_button_action" class="layui-btn layui-btn-sm"
                    group="funenc_xa_station.break_list_deal_button"
            t-if="widget.record.data.deal_situation == 'zero'"
            >处理</button>
            <button type="object" hidden="hidden" name="onchange_record_button_act" class="layui-btn layui-btn-sm"
                    group="funenc_xa_station.break_list_modify_button"
            t-if="widget.record.data.deal_situation == 'zero'"
            >修改</button>
            <button type="object"  name="edit_button_subit_act" class="layui-btn layui-btn-sm"
            t-if="widget.record.data.deal_situation == 'one'"
            >编辑</button>
            <button class="layui-btn layui-btn-sm layui-btn-danger" type="object"  name="break_delete_action"
                    group="funenc_xa_station.break_list_delete_button"
                    confirm="您确定要删除该条记录吗？" >删除</button>
        </div>
    </t>

       <t t-name="break_type_increase_button">
        <div class="layui-btn-group">
            <button type="object"  name="onchange_record" class="layui-btn layui-btn-sm"
            >修改</button>
            <button type="object"  name="onchange_record" class="layui-btn layui-btn-sm layui-btn-danger"
                    confirm="您确定要删除该条记录吗？"
            >删除</button>
        </div>
    </t>

    <t t-name="break_submit_search_button">
        <div class="form-inline custom_search_box">
            <div class="container-fluid">
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="margin-bottom:5px; width:300px;">
                    <label class="search_label col-lg-6 col-md-6 col-sm-6 col-xs-6">日期筛选:</label>
                    <div for="deal_time" class="form-widget-item col-md-5 col-sm-5 col-xs-8"/>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="margin-bottom:5px; width:300px;">
                    <label class="search_label col-lg-6 col-md-6 col-sm-6 col-xs-6">站点:</label>
                    <div for="line_id" class="form-widget-item col-md-5 col-sm-5 col-xs-8"/>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="margin-bottom:5px; width:300px;">
                    <label class="search_label col-lg-6 col-md-6 col-sm-6 col-xs-6">归属站点:</label>
                    <div for="site_id" class="form-widget-item col-md-5 col-sm-5 col-xs-8"/>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="margin-bottom:5px; width:300px;">
                    <label class="search_label col-lg-6 col-md-6 col-sm-6 col-xs-6">故障类型:</label>
                    <div for="break_type" class="form-widget-item col-md-5 col-sm-5 col-xs-8"/>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="margin-bottom:5px; width:300px;">
                    <label class="search_label col-lg-6 col-md-6 col-sm-6 col-xs-6">处理情况:</label>
                    <div for="deal_situation" class="form-widget-item col-md-5 col-sm-5 col-xs-8"/>
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12" style="margin-bottom:5px; width:200px;">
                    <button type="button" class="btn btn-default search_extend_apply">
                        搜索
                    </button>
                </div>
            </div>
        </div>
    </t>

    <t t-name="break_logo_management_search_button">
        <div class="form-inline custom_search_box">
            <div class="container-fluid">
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="margin-bottom:5px; width:300px;">
                    <label class="search_label col-lg-6 col-md-6 col-sm-6 col-xs-6">申报日期:</label>
                    <div for="apply_time" class="form-widget-item col-md-5 col-sm-5 col-xs-8"/>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="margin-bottom:5px; width:300px;">
                    <label class="search_label col-lg-6 col-md-6 col-sm-6 col-xs-6">线路:</label>
                    <div for="line_id" class="form-widget-item col-md-5 col-sm-5 col-xs-8"/>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="margin-bottom:5px; width:300px;">
                    <label class="search_label col-lg-6 col-md-6 col-sm-6 col-xs-6">站点:</label>
                    <div for="site_id" class="form-widget-item col-md-5 col-sm-5 col-xs-8"/>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="margin-bottom:5px; width:300px;">
                    <label class="search_label col-lg-6 col-md-6 col-sm-6 col-xs-6">状态:</label>
                    <div for="state" class="form-widget-item col-md-5 col-sm-5 col-xs-8"/>
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12" style="margin-bottom:5px; width:200px;">
                    <button type="button" class="btn btn-default search_extend_apply">
                        搜索
                    </button>
                </div>
            </div>
        </div>
    </t>

</templates>
