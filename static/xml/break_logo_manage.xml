<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
	<!--修改与删除按钮和删除-->
    <t t-name="break_log_button">
        <div class="layui-btn-group">
            <button class="layui-btn layui-btn-sm" type="object" name="onchange_change"
            t-if="widget.record.data.state == 'zero'"
            >修复</button>
            <button class="layui-btn layui-btn-sm layui-btn-danger" type="object" name="break_record_selete" confirm="您确定要删除该条记录吗？" >删除</button>
            <button type="object" name="onchange_record" class="layui-btn layui-btn-sm"
            >修改</button>
        </div>
    </t>
</templates>
