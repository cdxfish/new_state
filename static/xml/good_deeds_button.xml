<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
	<!--修改与删除按钮和删除-->
    <t t-name="good_deeds_button">
        <div class="layui-btn-group">
            <button class="layui-btn layui-btn-sm" type="object" name="test_btn_two_audit"
            t-if="widget.record.data.audit_state == 'one_audit'" group="funenc_xa_station.passenger_server_good_deeds_noe_audit"
            >通过初审</button>
            <button class="layui-btn layui-btn-sm" type="object" name="test_btn_through"
            t-if="widget.record.data.audit_state == 'two_audit'" group='funencxa_xa_station.passenger_server_good_deeds_two_audit'
            >通过复审</button>

            <button class="layui-btn layui-btn-sm" type="object" name="test_btn_rejected"
            t-if="widget.record.data.audit_state == 'rejected'" group='funencxa_xa_station.passenger_server_good_deeds_continue_submit'
            >继续提交</button>
            <button class="layui-btn layui-btn-sm" type="object" name="good_rejected"
            t-if="widget.record.data.audit_state == 'one_audit'" group='funencxa_xa_station.passenger_server_good_deeds_noe_audit_return'
            >初审驳回</button>
            <button class="layui-btn layui-btn-sm" type="object" name="good_rejected"
            t-if="widget.record.data.audit_state == 'two_audit'" group='funencxa_xa_station.passenger_server_good_deeds_two_audit_return'
            >复审驳回</button>
            <button class="layui-btn layui-btn-sm" type="object" name="onchange_button_action"
                t-if="widget.record.data.audit_state == 'one_audit' || widget.record.data.audit_state == 'two_audit' ||
                widget.record.data.audit_state == 'rejected'" group='funencxa_xa_station.passenger_server_good_deeds_modify'
            >修改</button>
            <button class="layui-btn layui-btn-sm" type="object" name="good_delete"
            confirm="您确定要删除该钥匙吗？" group='funencxa_xa_station.passenger_server_good_deeds_delete'
            >删除</button>
            <button class="layui-btn layui-btn-sm" type="object" name="good_details_button"
                    group='funencxa_xa_station.passenger_server_good_deeds_look_details'
            >查看详情</button>
        </div>
    </t>

