    <t t-name="special_money_button">
        <div class="layui-btn-group">
            <button class="layui-btn layui-btn-sm" type="object" name="test_btn_two_audit"
            t-if="widget.record.data.deal_result == 'one_audit'"
                    group='funencxa_xa_station.passenger_server_special_money_noe_audit'
            >通过初审</button>
            <button class="layui-btn layui-btn-sm" type="object" name="test_btn_through"
            t-if="widget.record.data.deal_result == 'two_audit'" group='funencxa_xa_station.passenger_server_special_money_two_audit'
            >通过复审</button>
            <button class="layui-btn layui-btn-sm" type="object" name="test_btn_rejected"
            t-if="widget.record.data.deal_result == 'rejected'"
                    group='funencxa_xa_station.passenger_server_special_money_continue_submit'
            >继续提交</button>
            <button class="layui-btn layui-btn-sm" type="object" name="good_rejected"
            t-if="widget.record.data.deal_result == 'one_audit' || widget.record.data.deal_result == 'two_audit'"
                    group='funencxa_xa_station.passenger_server_special_money_audit_return'
            >驳回</button>
            <button class="layui-btn layui-btn-sm" type="object" name="onchange_button_action"
            t-if="widget.record.data.deal_result == 'one_audit' || widget.record.data.deal_result == 'two_audit' ||
                widget.record.data.deal_result == 'rejected'" group='funencxa_xa_station.passenger_server_special_money_modify'
            >修改</button>
            <button class="layui-btn layui-btn-sm" type="object" name="good_delete"
            confirm="您确定要删除该钥匙吗？" group='funencxa_xa_station.passenger_server_special_money_delete'
            >删除</button>
            <button class="layui-btn layui-btn-sm" type="object" name="special_details_action"
                    group='funencxa_xa_station.passenger_server_special_money_look_details'
            >查看详情</button>
            <button class="layui-btn layui-btn-sm" type="object" name="print_refund_form"
            t-if="widget.record.data.deal_result == 'through'"
                    group='funencxa_xa_station.passenger_server_special_money_print_form'
            >打印退款单</button>
        </div>
    </t>

