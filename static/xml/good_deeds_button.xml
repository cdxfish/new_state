            <button class="layui-btn layui-btn-sm" type="object" name="good_details_button"
                    group='funencxa_xa_station.passenger_server_guest_injured_look_details'
            >查看详情</button>
            <!--<button class="layui-btn layui-btn-sm" type="object" name="view_details"-->
            <!--&gt;播放视屏</button>-->
        </div>
    </t>

