            <button class="layui-btn layui-btn-sm" type="object" name="test_btn_rejected"
            t-if="widget.record.data.audit_state == 'rejected'" group='funencxa_xa_station.passenger_server_guest_injured_continue_submit'
            >继续提交</button>
            <button class="layui-btn layui-btn-sm" type="object" name="good_rejected"
            t-if="widget.record.data.audit_state == 'one_audit'" group='funencxa_xa_station.passenger_server_guest_injured_noe_audit_return'
            >初审驳回</button>
            <button class="layui-btn layui-btn-sm" type="object" name="good_rejected"
            t-if="widget.record.data.audit_state == 'two_audit'" group='funencxa_xa_station.passenger_server_guest_injured_two_audit_return'
            >复审驳回</button>
            <button class="layui-btn layui-btn-sm" type="object" name="onchange_button_action"
            t-if="widget.record.data.audit_state == 'one_audit' || widget.record.data.state_now == 'two_audit' ||
                    widget.record.data.audit_state == 'rejected'" group='funencxa_xa_station.passenger_server_guest_injured_modify'
