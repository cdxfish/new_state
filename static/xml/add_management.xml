<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
	<!--修改与删除按钮和删除-->
    <t t-name="add_management_type">
        <div class="layui-btn-group">
            <button class="layui-btn layui-btn-sm" type="object" hidden="hidden" name="profession_kind_edit"
            group='funenc_xa_station.rules_regulations_modify'>修改</button>
            <button class="layui-btn layui-btn-sm layui-btn-danger" type="object" hidden="hidden" name="xian_metro_delete" confirm="您确定要删除该条记录吗？"
            group='funenc_xa_station.rules_regulations_delete'>删除</button>
            <button type="object" hidden="hidden" name="file_kind_load" class="layui-btn layui-btn-sm"
            group='funenc_xa_station.rules_regulations_download'>下载</button>
        </div>
    </t>
    <!--文件的显示按钮-->
    <t t-name="details_add__type">
        <div class="layui-btn-group">
            <button class="layui-btn layui-btn-radius layui-btn-primary" type="object" name="view_details"
                     t-if="widget.record.data.rule_regulations_browse == 'one'"
            >查看详情</button>
        </div>
    </t>
</templates>
