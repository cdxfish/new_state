<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <!--培训详情培训情况初始化数据-->
        <record model="funenc_xa_station.concentrate_training_situation" id="create_data_concentrate_training_situation">
            <field name="project">培训内容</field>
        </record>
        <record model="funenc_xa_station.concentrate_training_situation" id="create_data_concentrate_training_situation_1">
            <field name="project">培训思考题</field>
        </record>
        <record model="funenc_xa_station.concentrate_training_situation" id="create_data_concentrate_training_situation_2">
            <field name="project">培训人员评价</field>
        </record>
        <record model="funenc_xa_station.concentrate_training_situation" id="create_data_concentrate_training_situation_3">
            <field name="project">未签到站点</field>
        </record>

        <!--培训效果评价-->

        <record model="funenc_xa_station.training_effect" id="create_data_training_effect">
            <field name="evaluation_project">课程是否符合个人及工作需要，达到培训目标</field>
            <field name="evaluation_project_total_score">20</field>
        </record>
        <record model="funenc_xa_station.training_effect" id="create_data_training_effect_1">
            <field name="evaluation_project">培训内容是否紧密结合实际工作，应用性强</field>
             <field name="evaluation_project_total_score">20</field>
        </record>
        <record model="funenc_xa_station.training_effect" id="create_data_training_effect_2">
            <field name="evaluation_project">课程是否丰富，易于理解</field>
             <field name="evaluation_project_total_score">10</field>
        </record>
        <record model="funenc_xa_station.training_effect" id="create_data_training_effect_3">
            <field name="evaluation_project">培训内容是否紧密结合实际，具有指导性</field>
            <field name="evaluation_project_total_score">10</field>
        </record>
        <record model="funenc_xa_station.training_effect" id="create_data_training_effect_4">
            <field name="evaluation_project">培训师的表达是否清楚，态度友善</field>
            <field name="evaluation_project_total_score">10</field>
        </record>
        <record model="funenc_xa_station.training_effect" id="create_data_training_effect_5">
            <field name="evaluation_project">对学员的提问做出回答与指导</field>
            <field name="evaluation_project_total_score">10</field>
        </record>

        <record model="funenc_xa_station.training_effect" id="create_data_training_effect_8">
            <field name="evaluation_project">是否鼓励学员参与课堂教学</field>
            <field name="evaluation_project_total_score">10</field>
        </record>

        <record model="funenc_xa_station.training_effect" id="create_data_training_effect_6">
            <field name="evaluation_project">培训讲义、课件编写质量</field>
            <field name="evaluation_project_total_score">10</field>
        </record>
        <record model="funenc_xa_station.training_effect" id="create_data_training_effect_7 ">
            <field name="evaluation_project">总分</field>
        </record>


        <!---->
        <record model="funenc_xa_station.drill_situation" id="create_data_drill_situation_1 ">
            <field name="name">演练背景</field>
        </record>
        <record model="funenc_xa_station.drill_situation" id="create_data_drill_situation_2 ">
            <field name="name">演练过程记录</field>
        </record>

        <!--换班申请时间设置-->
        <record model="funenc_xa_station.change_shifts_time" id="change_shifts_time">
            <field name="context">换班需提前申请时间（天)</field>
            <field name="time">1</field>
        </record>

        <!--操作日志初始化-->
        <record model="funenc_xa_station.operation_log" id="create_operation_log">
            <field name="name">操作日志</field>
        </record>

    </data>
</odoo>